@model IEnumerable<DriverDel>

<h3>DriverDel List </h3>

<a asp-action="Create" class="btn btn-primary">Create</a>


@if(Model.Count() == 0)
{
    

    <h1>No Records Found!</h1>


}
else{
    <table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Delete Date</th>
        </tr>
    </thead>

    <tbody>

      
        @foreach (var driverDel in Model)
        {
            <tr>

                <td>@driverDel.DeleteDate</td>
                <td>
                    <a asp-action="DriverDelDetails" asp-route-id="@driverDel.Id" class="btn btn-info">Details</a>
                </td>
                    <td>
                        <span class="btn btn-danger">
                        @Html.ActionLink("Delete", "DriverDelDelete", new { id = driverDel.Id }, new { onclick = " return confirm('Are you sure you wish to delete this Driver?');" })
                        </span>
                    </td>

                    <td>
                        <a class="btn btn-primary" href="@Url.Action("DriverDelPut", "DriverDel", new { id = driverDel.Id })">Edit</a>
                    </td>
            </tr>
        }
        

    </tbody>

</table>

}