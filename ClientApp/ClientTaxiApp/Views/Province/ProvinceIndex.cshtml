@model IEnumerable<Province>

<h3>Province List </h3>
<a asp-action="Create" class="btn btn-primary">Create</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var province in Model)
        {
            <tr>
                <td>@province.Name </td>
                  <td>
                    <a asp-action="ProvinceDetails" asp-route-id="@province.Id" class="btn-info">Details</a>
                </td>

                  <td>
                      <span class="btn-danger">
                    @Html.ActionLink("Delete", "ProvinceDelete", new { id = province.Id }, new { onclick = " return confirm('Are you sure you wish to delete this Province?');" })
                    </span>
                </td>

                <td>
                    <a class="btn btn-primary" href="@Url.Action("ProvincePut", "Province", new { id = province.Id })">Edit</a>
                </td>

            </tr>

        }
    </tbody>

</table>